    'чему', 'что', 'чтобы', 'эта', 'эти', 'этим', 'этими', 'этих', 'это', 'этого', 'этой', 'этом', 'этому',
    'этот', 'этою', 'эту', 'я'
]
user_choice = input("Удалить стоп-слова?")

text = read_text()
cleaned_text_result = cleaned_text(text)
if user_choice.lower() == "да":
    filtered_text = remove_stop_words(cleaned_text_result, stop_words)
    print("Текст без стоп-слов:", filtered_text)
else:
    print("Текст без изменений:", cleaned_text_result)
