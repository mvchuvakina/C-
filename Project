import re

#1.1
def read_text():
    with open('Гранатовый браслет.docx', "r", encoding='utf-8') as file:
        text = file.read()
        return text

#1.2
def cleaned_text(text):
    cleaned_text_result = re.sub(r"[^а-яА-ЯёЁ]", "", text)
    cleaned_text_result = cleaned_text_result.replace('ё', 'е')
    cleaned_text_result = cleaned_text_result.replace('Ё', 'Е')
    return cleaned_text_result

#1.3
def remove_stop_words(text, stop_words):
    words = text.split()
    filtered_words = [word for word in words if word not in stop_words]
    return " ".join(filtered_words)
stop_words = [
    'будешь', 'буду', 'будут', 'будучи', 'будь', 'будьте', 'бы', 'был', 'была', 'были', 'было', 'быть',
